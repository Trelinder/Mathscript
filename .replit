modules = ["python-3.11", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["python_gemini_ai_integrations:1.0.0", "python_openai_ai_integrations:1.0.0", "stripe:2.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Math Quest App"

[[workflows.workflow]]
name = "Math Quest App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && uvicorn backend.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "5000"]
build = ["bash", "-lc", "if [ -f /home/runner/workspace/build.sh ]; then bash /home/runner/workspace/build.sh; elif [ -f /workspace/build.sh ]; then bash /workspace/build.sh; else bash build.sh; fi"]
